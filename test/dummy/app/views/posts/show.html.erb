<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Regular:</strong>
  <%= image_tag @post.image.file.regular.url if @post.image? %>
  <strong>Thumb:</strong>
  <%= image_tag @post.image.file.thumb.url if @post.image? %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
