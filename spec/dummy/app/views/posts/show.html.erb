<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Attachment:</strong>
  <%= link_to(@post.attachment.name, @post.attachment.original_file) if @post.attachment? %>
</p>

<p>
  <%= img @post.picture.big, alt: 'Lorem ipsum' %>
  <strong>Regular:</strong>
  <%= img @post.picture.regular, alt: 'Lorem ipsum' %>
  <strong>Thumb:</strong>
  <%= img @post.picture.thumb %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Gallery:</strong>
  <% for image in @post.images %>
    <%= img image.thumb %>
  <% end %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
